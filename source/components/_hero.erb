<%#

    NAME: Hero
    PARAMETERS:
      heading: String
      portrait: Image

%>
<header class="d-flex-ns ai-center jc-space_between mw-16rem mw-45rem-ns mh-auto mt-5rem mt-0-ns mb-8rem">
  <h1 class="w-45p-ns ma-0 mb-5rem mb-0-ns ff-source_sans_pro fw-regular fs-2rem fs-2_5rem-ns lh-1_5 c-coal"><%= heading %></h1>
  <div class="w-50p-ns">
    <img class="d-block mw-100p mb-0_5rem" src="<%= portrait.src %>" alt="<%= portrait.alt %>">
    <% if portrait.caption %>
      <p class="ma-0 ff-source_sans_pro fw-bold fs-0_8rem c-steel"><%= portrait.caption %></p>
    <% end %>
  </div>
</header>
