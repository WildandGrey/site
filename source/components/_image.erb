<%#

    NAME: Image
    PARAMETERS:
      src: String
      alt: String
      caption: String?
      _first: Bool

%>
<%# Config %>
<%# Comment: Conditional top margin if component is first component within content list %>
<% if _first %>
  <% margin_top = "mt-5rem mt-0-ns" %>
<% else %>
  <% margin_top = "" %>
<% end %>
<%# End %>
<figure <% if caption %>data-placement="image"<% end %> class="p-relative mw-56rem ma-0 mh-auto <%= margin_top %> mb-8rem ph-1_5rem ph-0-ns">
  <img class="d-block w-100p" src="<%= src %>" alt="<%= alt %>">
  <% if caption %>
    <figcaption data-placement="caption" class="p-absolute zi-2 l-2rem to-top_right t-caption ff-source_sans_pro fw-regular fs-0_8rem c-gray"><%= caption %></figcaption>
  <% end %>
</figure>
