<%#

    NAME: Double-Column Paragraph
    PARAMETERS:
      index: Int
      title: String
      first_column: String
      second_column: String

%>
<section class="mw-42_125rem mh-auto mb-8rem">
  <header class="mb-0_8125rem">
    <h1 class="ma-0 ff-akkurat fw-bold fs-1_125rem c-coal"><span class="mr-1_375rem c-gray"><%= index %></span><%= title %></h1>
  </header>
  <div class="clearfix">
    <p class="f-left w-50percent ma-0 pr-0_25rem ff-akkurat fw-regular fs-0_9375rem c-coal lh-1_5"><%= first_column %></p>
    <p class="f-right w-50percent ma-0 pl-0_25rem ff-akkurat fw-regular fs-0_9375rem c-coal lh-1_5"><%= second_column %></p>
  </div>
</section>
