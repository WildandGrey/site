<%#

    NAME: Card,
    PARAMETERS:
      Index: Int
      Title: String
      Image: Image
      Project: String
      Description: String

%>
<article class="mb-7_75rem">
  <header class="clearfix mb-1rem">
    <%# Index %>
    <h3 class="f-left w-15percent ma-0 ff-akkurat fw-bold fs-1_125rem c-gray"><%= "0#{ index }" %></h3>
    <%# Title %>
    <h1 class="ma-0"><a data-interaction="link" class="f-left w-85percent ma-0 ff-akkurat fw-bold fs-1_125rem c-coal td-none" href="/case-studies/<%= title.parameterize %>"><%= title %></a></h1>
  </header>
  <a class="d-block" href="/case-studies/<%= title.parameterize %>"><img class="w-100percent mb-1_25rem" src="<%= image.src %>" alt="<%= image.alt %>"></a>
  <h2 class="ma-0 mb-0_4375rem ff-akkurat fw-bold fs-0_875rem c-coal"><%= project %></h2>
  <p class="ma-0 ff-akkurat fw-regular fs-0_875rem lh-1_5 c-coal"><%= description %></p>
</article>
